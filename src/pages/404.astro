---
import { Image } from "astro:assets";
import error from "../images/error-404.png";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Navbar />
<div class="flex flex-col items-center justify-items-center gap-7">
  <Image src={error} alt="404" height={250} width={250} class="mt-10" />
  <h1 class="text-5xl font-bold">Page Not Found.</h1>
  <p class="text-2xl mb-10 font-normal">
    Sorry, We couldn't find the page y're looking for.
  </p>
  <a
    href="/"
    class="bg-gray-100 inline-block text-lg p-2 mb-6 rounded-md hover:bg-indigo-500 hover:text-white"
    >Return to Home</a
  >
</div>
<Footer />
